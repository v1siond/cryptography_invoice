.l-container.-centered
  = form_for @product, url: products_path, authenticity_token: true, remote: true, html: { class: 'pure-u-22-24 pure-u-sm-4-5 d-form remote_form product white-box' } do |f|
    %h3.d-title.-panel.-scorpion
      New product
    = render "layouts/error_messages", :target => @product
    .pure-u-1.fieldset
      = f.label :name, :class => 'label'
      = f.text_field :name, placeholder: 'product Name', :class => 'field'
    .pure-u-1.fieldset
      = f.label :price, :class => 'label'
      = f.text_field :price, placeholder: 'product Price', :class => 'field'
    = f.submit "Add product", :class => 'green-button'
