.l-container.-centered
  .pure-u-22-24.white-box
    .field-group
      %h2.d-title.-scorpion.-fullWidth.-right.-big
        Invoice
      .pure-u-1.field-set
        %p.d-text.-fullwidth._text-right
          %strong.d-title.-mid-size.-scorpion.-right
            Status: 
          - if @invoice.status == 1
            Pago confirmado
          - else
            Pago no confirmado
        %p.d-text.-fullwidth._text-right
          %strong.d-title.-mid-size.-scorpion
            Name:
          = " #{@invoice.company.name}"
        %p.d-text.-fullwidth._text-right
          %strong.d-title.-mid-size.-scorpion
            Nit:
          = " #{@invoice.company.nit}"
        %p.d-text.-fullwidth._text-right
          %strong.d-title.-mid-size.-scorpion
            Direction:
          = " #{@invoice.company.direction}"
          = " #{@invoice.company.city}, #{@invoice.company.country}"
    %hr.line-division
    %h3.d-title.-scorpion.-small-size.-left
      Bill to
    .field-group.-between
      .pure-u-1.pure-u-lg-11-24.field-set.-left
        .pure-u-1._text-left
          %p.d-text.-fullwidth
            %strong.d-title.-mid-size.-scorpion
              Name:
            = " #{@invoice.client.name}"
          %p.d-text.-fullwidth
            %strong.d-title.-mid-size.-scorpion
              ID:
            = " #{@invoice.client.identification}"
          %p.d-text.-fullwidth
            %strong.d-title.-mid-size.-scorpion
              Phone:
            = " #{@invoice.client.phone}"
          %p.d-text.-fullwidth
            %strong.d-title.-mid-size.-scorpion
              Direction:
            = " #{@invoice.client.direction}"          
      .pure-u-1.pure-u-lg-11-24.field-set.-right._text-right
        .pure-u-1.invoice-info
          %strong.d-title.-mid-size.-scorpion
            = "Invoice #: #{@invoice.id}"
        .pure-u-1.invoice-info
          %strong.d-title.-mid-size.-scorpion
            = "Invoice date: #{@invoice.date}"
        .pure-u-1.invoice-info
          %strong.d-title.-mid-size.-scorpion
            Payment Due:
          %label.d-title.-mid-size.-scorpion.label
            = @invoice.date
        .pure-u-1.invoice-info
          %strong.d-title.-mid-size.-scorpion
            = "Tax #: #{@invoice.tax}%"
        .pure-u-1.invoice-info
          %strong.d-title.-mid-size.-scorpion
            Amount Due (USD):
            %span.balance
              = @invoice.balance
    %table.pure-u-1.h-table
      %tbody.pure-u-1.t-body
        %tr.pure-u-1.header
          %td.t-item.pure-u-1-5
            Name:
          %td.t-item.pure-u-1-5
            ID:
          %td.t-item.pure-u-1-5
            Quantity:
          %td.t-item.pure-u-1-5
            Price:
          %td.t-item.pure-u-1-5
            Total:
    %table.pure-u-1.i-table
      %tbody.pure-u-1.t-body.product-table
        - @invoice.invoice_products.each do |item|
          %tr.pure-u-1.row.field-container
            %td.t-item.pure-u-1-5
              %span
                = item.product.name
            %td.t-item.pure-u-1-5.i-id
              %span
                = item.product.id
            %td.t-item.pure-u-1-5
              %span
                = item.product_quantity
            %td.t-item.pure-u-1-5
              $
              %span.i-price
                = item.product.price
            %td.t-item.pure-u-1-5
              $
              %span.i-price
                = item.product_total_price
    .pure-u-1.i-balance._text-right
      %strong.d-title.-mid-size.-scorpion
        Balance total: $
        = @invoice.balance
