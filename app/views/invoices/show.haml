%html
  %head
    %title= content_for?(:title) ? "#{yield(:title)} | Cryptography and Solutions Invoices" : "Cryptography and Solutions Invoices"
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:name => "description",                                         |
          :content => content_for?(:description) ? yield(:description) :  |
          "Invoices - Cryptography and Solutions"}/    |
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = csrf_meta_tags
    = stylesheet_link_tag wicked_pdf_asset_base64('application')
    = wicked_pdf_stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = wicked_pdf_javascript_include_tag "application", "data-turbolinks-track" => true
  .pure-u-1
    .l-container
      .l-container.field-group.-end
        %h2.d-title.-scorpion.-fullWidth.-right.-big
          Invoice
        .field-set
          %p.d-text.-fullwidth._text-right
            %strong.d-title.-mid-size.-scorpion.-right
              Status: 
            - if @invoice.status == 1
              Paid
            - else
              Pending
          %p.d-text.-fullwidth._text-right
            %strong.d-title.-mid-size.-scorpion
              Name:
            = " #{@invoice.company.name}"
          %p.d-text.-fullwidth._text-right
            %strong.d-title.-mid-size.-scorpion
              Nit:
            = " #{@invoice.company.nit}"
          %p.d-text.-fullwidth._text-right
            %strong.d-title.-mid-size.-scorpion
              Address:
            = " #{@invoice.company.direction}"
            = " #{@invoice.company.city}, #{@invoice.company.state}, #{@invoice.company.country}"
      %hr.full-width.line-division
      .l-container.field-group.-between
        .pure-u-11-24.field-set.-left
          .pure-u-1._text-left
            %strong.d-title.-mid-size.-scorpion
              Bill to:
            %p.d-text.-fullwidth
              = " #{@invoice.client.name}"
            %p.d-text.-fullwidth
              = " #{@invoice.client.identification}"
            %p.d-text.-fullwidth
              = " #{@invoice.client.direction}"
        .pure-u-11-24.field-set.-right
          .pure-u-1.invoice-info._text-right
            %strong.d-title.-mid-size.-scorpion
              = "Invoice #: #{@invoice.id}"
          .pure-u-1.invoice-info._text-right
            %strong.d-title.-mid-size.-scorpion
              = "Invoice date: #{@invoice.date}"
          .pure-u-1.invoice-info._text-right
            %strong.d-title.-mid-size.-scorpion
              Payment Due:
            %label.d-title.-mid-size.-scorpion.label
              = @invoice.date
          .pure-u-1.invoice-info._text-right
            %strong.d-title.-mid-size.-scorpion
              = "Tax #: #{@invoice.tax}%"
          .pure-u-1.invoice-info._text-right
            %strong.d-title.-mid-size.-scorpion
              Amount Due (USD):
              %span.balance
                $
                = @invoice.balance
      .pure-u-1.h-table
        .pure-u-1.t-body
          .pure-u-1.header
            .t-item.pure-u-1-4
              Name:
            .t-item.pure-u-1-4
              Quantity:
            .t-item.pure-u-1-4
              Price:
            .t-item.pure-u-1-6
              Total:
      .pure-u-1.i-table
        .pure-u-1.t-body
          - @invoice.invoice_products.each do |item|
            .pure-u-1.row.field-container
              .t-item.pure-u-1-4
                %span
                  = item.product.name
              .t-item.pure-u-1-4
                %span
                  = item.product_quantity
              .t-item.pure-u-1-4
                %span.i-price
                  $
                  = item.product.price
              .t-item.pure-u-1-6
                %span.i-price
                  $
                  = item.product_total_price
      .l-container.pure-u-1.-between
        %h2.d-title.-mid-size.-scorpion.pure-u-1
          Payment Details
        .payment-details
          %h3.d-title.-mid-size.-scorpion.pure-u-1.-left
            Paypal Account:
          %dl.payment-via.pure-u-1
            %p.d-title.-small-size.-scorpion
              Account:
            %span
              amelia21692011@gmail.com
            %p.d-title.-small-size.-scorpion
              Amount:
            %span
              $528,86
          %h3.d-title.-mid-size.-scorpion.pure-u-1.-left
            Payoneer Account:
          %dl.payment-via.pure-u-1
            %p.d-title.-small-size.-scorpion
              Bank Name:
            %span
              First Century Bank
            %p.d-title.-small-size.-scorpion
              Routing (ABA):
            %span
              061120084
            %p.d-title.-small-size.-scorpion
              Account Number:
            %span
              4016110817786
            %p.d-title.-small-size.-scorpion
              Account Type :
            %span
              CHECKING
            %p.d-title.-small-size.-scorpion
              Beneficiary Name
            %span
              Alexander Pulido
            %p.d-title.-small-size.-scorpion
              Amount:
            %span
              $1471.14
        %strong.d-title.-mid-size.-scorpion.-right
          Balance total: $
          = @invoice.balance
        %dl.pure-u-1
          %h2.d-title.-small-size.-scorpion.-left
            Important Note for Payments via Payoneer:
          %p.d-text.-small.-scorpion.-left
            Only ACH (US local bank) transfers in USD can be accepted
          %p.d-text.-small.-scorpion.-left
            Transfers must be made from a company account
          %p.d-text.-small.-scorpion.-left
            Transfers from individuals will be automatically rejected
          %p.d-text.-small.-scorpion.-left
            Wire transfers are not supported
          %p.d-text.-small.-scorpion.-left
            Transfers made from a company account owned by you cannot be accepted
