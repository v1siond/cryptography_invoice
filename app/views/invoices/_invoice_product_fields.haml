%tr.pure-u-1.row.field-container
  %td.t-item.pure-u-1-3
    = f.hidden_field :product_id, :class => 'field product_id'
    %input{type: 'text', class: 'products-search field', placeholder: 'Name/ID'}
  %td.t-item.pure-u-1-12
    %span.i-id
      _
  %td.t-item.pure-u-1-5
    = f.text_field :product_quantity, placeholder: 'Quantity', class: 'field product_quantity pure-u-1', required: true
  %td.t-item.pure-u-1-12
    $
    %span.i-price
      _
  %td.t-item.pure-u-1-8
    $
    %span.i-total
    = f.hidden_field :product_total_price, class: 'i-total'
  %td.t-item.pure-u-1-24
    = f.hidden_field :_destroy, class: 'destroy'
    %span
      = link_to 'x', '#', class: 'remove_product'
